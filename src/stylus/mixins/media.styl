
media(label, type = min)
	media-queries = {
		tablet: 720px,
		desktop: 1024px,
		desktop-middle: 1224px,
		desktop-wide: 1300px
	}

	current = media-queries[label]
	if type == max
		current = current - 1 
	type = ('%s-width' % type)

	if current != null
		@media screen and ({type} current)
			{block}
