.game-holder
	&:before
		padding-top 75%
		content ""
		background red
		display block

	position relative
	max-width 400px

	&__wrapper
		position absolute
		z-index 10
		left 0
		top 0
		width 100%
		height 100%
		box-sizing border-box

	&.-fullscreen
		&:before
			display none

		position static
		background red
		border 1px solid red

		.game-holder__wrapper
			width 100vh
			height 100vw
			transform translateX(100vw) rotate(90deg)
			transform-origin top left
			border 10px solid yellow

			@media (orientation: landscape) {
				width 100vw
				height 100vh
				transform none
			}
