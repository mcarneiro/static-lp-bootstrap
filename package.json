{
  "name": "static-lp-bootstrap",
  "version": "1.0.0",
  "description": "static landing page bootstrap",
  "main": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "concurrently 'npm:html' 'npm:css -- -c' 'npm:js -- --mode=production'",
    "dev": "concurrently 'npm:server' 'npm:watch-css' 'npm:watch-js' 'npm:watch-html'",
    "server": "browser-sync www -w",
    "watch-css": "npm run css -- -w",
    "watch-js": "npm run js -- w --mode=development",
    "watch-html": "node metalsmith.js --dev",
    "html": "node metalsmith.js",
    "css": "stylus -o ./www/assets/css/main.css ./src/stylus/main.styl",
    "js": "webpack",
    "package": "npm start && cd www && zip -r ../samsung-lp-$(date +'%Y%m%d-%H%M').zip . && cd .."
  },
  "author": "Marcelo Miranda Carneiro <mcarneiro@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "concurrently": "^6.0.2",
    "jstransformer-pug": "^0.4.0",
    "metalsmith": "^2.3.0",
    "metalsmith-layouts": "^2.3.1",
    "metalsmith-watch": "^1.0.3",
    "stylus": "^0.54.8",
    "webpack": "^5.34.0",
    "webpack-cli": "^4.6.0"
  }
}
